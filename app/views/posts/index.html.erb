<h1>Books</h1>

<% @posts.each do |post| %>
	<%= post.title %>
	<%= post.body %>
	<%= link_to "Show", post_path(post.id), class:"show_#{post.id}" %>
	<%= link_to "Edit", edit_post_path(post.id), class:"edit_#{post.id}" %>
	<%= link_to "Destroy", destroy_post_path(post.id), class:"destroy_#{post.id}", method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>

<h2>New book</h2>

<%= form_for @post, url: posts_create_path do |f| %>

	<h4> Title</h4>
	<%= f.text_field :title, class:"book_title" %>

	<h4> Body</h4>
	<%= f.text_area :body, class:"book_body" %>
	<br>
	<%= f.submit 'Create Book' %>
<% end %>